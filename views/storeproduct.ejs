<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Seller Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">

    <style>
        * {
            padding: 0;
            margin: 0;
            text-decoration: none;
            list-style: none;
            box-sizing: border-box;
        }

        body {
            background-image: url('https://images.pexels.com/photos/21393/pexels-photo.jpg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
            background-size: cover;
            background-position: center;
        }

        .body {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            display: flex;
        }

        nav {
            background: #000000;
            height: 80px;
            width: 100%;
        }

        label.logo {
            color: #00ff37;
            font-size: 35px;
            line-height: 80px;
            padding: 0 100px;
            font-weight: bold;
        }

        nav ul {
            float: right;
            margin-right: 20px;
            cursor: pointer;
        }

        nav ul li {
            display: inline-block;
            line-height: 80px;
            margin: 0 15px;
        }

        nav ul li a {
            color: white;
            font-size: 17px;
            text-transform: uppercase;
        }

        .Button {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 100px;
        }

        .submit,
        .clear {
            text-decoration: none;
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            margin: 10px;
            border-radius: 5px;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s ease;
        }

        .submit:hover,
        .clear:hover {
            background-color: #0056b3;
        }

        h2 {
            margin-top: 20px;
            text-align: center;
            font-size: 28px;
            color: #000000;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .quote-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100px;
          
            margin: 50px 100px;
            padding: 20px;
            border-radius: 5px;
           
        }

        .quote {
            text-align: center;
            font-size: 20px;
            font-style: italic;
            color: #333;
        }
    </style>
</head>

<body>
    <div class="body">
        <nav>
            <label class="logo">Uzhavan House</label>
            <ul>
                <li><a href="/profile/<%= email %>">Profile</a></li>
            </ul>
        </nav>
    </div>

    <h2>Welcome to the Seller Dashboard</h2>
    <div class="quote-container animate_animated animate_fadeIn">
      <p id="quote" class="quote"></p>
  </div>

    <div class="Button animate_animated animate_fadeIn">
        <a class="submit" href="/products/<%= id %>/<%= email %>">View Products</a>
        <a class="clear" href="/addproduct/<%= id %>/<%= email %>">Add Product</a>
    </div>

   

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <!-- Tailwind CSS JS -->
    <script src="https://cdn.tailwindcss.com/2.2.19/tailwind.min.js"></script>

    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <!-- Typed.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typed.js/2.0.12/typed.min.js"></script>

    <!-- Custom JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var typed = new Typed("#quote", {
                strings: ["\"Your work is going to fill a large part of your life, and the only way to be truly satisfied is to do what you believe is great work. And the only way to do great work is to love what you do.\" - Steve Jobs"],
                typeSpeed: 50,
                backSpeed: 30,
                loop: true,
            });
        });
    </script>
</body>

</html>